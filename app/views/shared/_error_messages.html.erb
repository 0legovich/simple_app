<% if @user.errors.any?%>
	<div id="error_explanation">
		<div class="alert alert-error">
			<%=@user.errors.count%> <%= Russian.p(@user.errors.count, "ошибку", "ошибки", "ошибок")%> содержит форма.
		</div>
		<ul>
		<%@user.errors.full_messages.each do |msg| %>
				<li>* <%= msg%> </li></br>
			<%end%>
		</ul>
	</div>
<%end%>