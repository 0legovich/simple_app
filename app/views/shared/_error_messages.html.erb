<% if object.errors.any?%>
	<div id="error_explanation">
		<div class="alert alert-error">
			<%= object.errors.count%> <%= Russian.p(object.errors.count, "ошибку", "ошибки", "ошибок")%> содержит форма.
		</div>
		<ul>
		<% object.errors.full_messages.each do |msg| %>
				<li>* <%= msg%> </li></br>
			<%end%>
		</ul>
	</div>
<%end%>