<%= (provide :title, "Домашняя")%>

<% if signed_in? %>
	<div class="row">
		<aside class="row4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/microposts_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Посты</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Добро пожаловать. Приложение Sample App</h1>
		<%= link_to "Регистрация!", "signup", class: "btn btn-large btn-primary"%> 
	</div>
<% end %>

<%= link_to image_tag("rails.svg", alt: "Rails"), 'http://rubyonrails.org/', class: "img img-circle" %>
