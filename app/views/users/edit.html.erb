<% provide(:title, "Редактирование профиля") %>

<h1>Редактирование профиля</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label "Имя"%>
			<%= f.text_field :name%>

			<%= f.label "Email"%>
			<%= f.text_field :email%>

			<%= f.label "Пароль"%>
			<%= f.password_field :password%>

			<%= f.label "Подтверждение пароля"%>
			<%= f.password_field :password_confirmation%>

			<%= f.submit "Сохранить изменения", class: "btn btn-primary btn-large"%>
		<% end %>

		<%= gravatar_for @user%>
		<a href="http://gravatar.com/emails">Изменить</a>
	</div>
</div>