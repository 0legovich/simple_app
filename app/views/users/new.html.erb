<%= (provide :title, "Регистрация")%>
<div class="center hero-unit">
	<h1>Добро пожаловать на страницу "Регистрация"</h1>

</div>


<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>

			<%= render 'shared/error_messages'%>

			<%= f.label "Имя" %>
			<%=f.text_field :name %>

			<%= f.label "Email" %>
			<%= f.text_field :email %>

			<%= f.label "Пароль" %>
			<%= f.password_field :password %>

			<%= f.label "Подтверждение пароля" %>
			<%= f.password_field :password_confirmation%>

			<%= f.submit "Создать аккаунт", class: "btn btn-large btn-primary" %>
		<% end %>

	</div>
</div>